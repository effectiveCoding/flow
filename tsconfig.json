{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@app/components": ["src/components/index.ts"],
      "@app/contexts": ["src/contexts/EditorContext.tsx"],
      "@app/constants": ["src/constants.ts"],
      "@app/layouts": ["src/pageLayout.ts"],
      "@app/db-client": ["./prisma/prisma.ts"],
      "@styles/*": ["src/styles/*"],
      "@lib/*": ["lib/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
